{
	"name": "@coradion/ui",
	"version": "0.0.0",
	"description": "A component library for Coradion sites and apps",
	"main": "dist/index.js",
	"type": "module",
	"exports": {
		"./styles.css": "./dist/styles.css",
		".": "./dist/index.js",
		"./package.json": "./package.json"
	},
	"files": ["dist/**/*"],
	"repository": {
		"type": "git",
		"url": "https://github.com/coradion/ui"
	},
	"bugs": {
		"url": "https://github.com/coradion/ui/issues"
	},
	"directories": {
		"dist": "dist"
	},
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"build-tailwind": "pnpm dlx @tailwindcss/cli -i ./src/styles.css -o ./dist/styles.css",
		"build-components": "tsc --build",
		"build": "pnpm run build-components && npm run build-tailwind",
		"biome-check": "pnpm biome check --write"
	},
	"author": "Coradion",
	"license": "AGPL-3.0-or-later",
	"keywords": [],
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@chromatic-com/storybook": "^3.2.5",
		"@storybook/addon-actions": "^8.6.4",
		"@storybook/addon-essentials": "^8.6.4",
		"@storybook/addon-interactions": "^8.6.4",
		"@storybook/addon-links": "^8.6.4",
		"@storybook/addon-themes": "^8.6.4",
		"@storybook/blocks": "^8.6.4",
		"@storybook/manager-api": "^8.6.4",
		"@storybook/nextjs": "^8.6.4",
		"@storybook/react": "^8.6.4",
		"@storybook/test": "^8.6.4",
		"@storybook/theming": "^8.6.4",
		"@tailwindcss/postcss": "^4.0.11",
		"@tsconfig/strictest": "^2.0.5",
		"postcss": "^8.5.3",
		"postcss-loader": "^8.1.1",
		"storybook": "^8.6.4",
		"tailwindcss": "^4.0.11",
		"typescript": "^5.8.2"
	},
	"dependencies": {
		"@radix-ui/react-accordion": "^1.2.3",
		"@radix-ui/react-slot": "^1.1.2",
		"@types/react": "^19.0.10",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.479.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"tailwind-merge": "^3.0.2",
		"tailwindcss-animate": "^1.0.7"
	},
	"release": {
		"branches": [
			"main",
			{
				"name": "next",
				"prerelease": true
			}
		]
	},
	"private": false,
	"publishConfig": {
		"access": "public"
	}
}
