{
  "name": "@coradion/ui",
  "version": "0.0.0",
  "description": "A component library for Coradion sites and apps",
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    "./styles.css": "./dist/styles.css",
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/coradion/ui"
  },
  "bugs": {
    "url": "https://github.com/coradion/ui/issues"
